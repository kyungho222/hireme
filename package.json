{
  "name": "hireme-project",
  "version": "1.0.0",
  "private": true,
  "description": "통합된 HireMe 프로젝트 - 관리자 대시보드와 클라이언트 애플리케이션",
  "workspaces": [
    "admin",
    "client"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:admin\" \"npm run start:client\"",
    "start:admin": "cd admin && npm start",
    "start:client": "cd client && npm start",
    "build": "npm run build:admin && npm run build:client",
    "build:admin": "cd admin && npm run build",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd admin && npm install && cd ../client && npm install",
    "dev": "concurrently \"npm run start:admin\" \"npm run start:client\"",
    "test": "npm run test:admin && npm run test:client",
    "test:admin": "cd admin && npm test",
    "test:client": "cd client && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
} 