                ref={inputRef}
                value={inputValue}
                onChange={(e) => setInputValue(e.target.value)}
                onKeyPress={handleKeyPress}
                placeholder="ë©”ì‹œì§€ë¥¼ ì…ë ¥í•˜ì„¸ìš”..."
                disabled={isLoading}
              />
              <SendButton
                onClick={() => handleSendMessage()}
                disabled={!inputValue.trim() || isLoading}
              >
                <FiSend size={18} />
              </SendButton>
            </ChatInput>
          </ChatWindow>
        </ChatbotContainer>
            </>
        )}
      </AnimatePresence>
    </>
  );
};

